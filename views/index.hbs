<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dynamic website using node js and express js</title>

</head>

<body>
    {{>navbar data=details}}

    {{>slider slides=slides}}

    {{!-- services section --}}

    <section id="services_section" class="py-5">
        <h1 class="text-center text-secondary">Services We Provide</h1>
        <div class="container">
            <div class="row mt-4">

                {{#each services}}
                <div class="col-md-4 py-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="text-center service_icon py-3">
                                <i class="{{this.icon}}"></i>
                            </div>
                            <h5 class="card-title">{{this.title}}</h5>
                            <p>{{this.description}}</p>

                            <a href="{{this.linkUrl}}">{{this.linkText}}</a>
                            <a href="{{this.linkUrl}}" class="ml-4">Support</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>

    {{!-- contact section --}}

    <section id="contact_section" class="py-4 mt-4">
        <div class="container">
            <h3 class="text-center">Contact Us</h3>
            <div class="row">
                <div class="col-md-12">
                    <form action="/contact-form" method="post">
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Email address</label>
                            <input name="email" type="email" class="form-control" placeholder="Email address">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Contact Number</label>
                            <input name="phone" type="text" class="form-control" placeholder="Contact number" id="contactNumber">
                        </div>

                        <div class="form-floating my-3">
                            <textarea name="query" class="form-control" placeholder="Type Query..." id="floatingTextarea2" style="height: 200px"></textarea>
                            <label for="floatingTextarea2">Query...</label>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    {{>footer}}
</body>

</html>